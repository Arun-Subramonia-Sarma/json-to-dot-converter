## Entity template
#set($styles = $styleService.getEntityStyles($entity.id))
    // $entity.name
    $entity.id [label=<
        <TABLE BORDER="2" CELLBORDER="1" CELLSPACING="0" CELLPADDING="6">
            <TR>
                <TD BGCOLOR="$styles.get('header_bg')" COLSPAN="3">
                    <FONT COLOR="$styles.get('header_text')"><B>$entity.name</B></FONT>
                </TD>
            </TR>
            <TR><TD COLSPAN="3" BGCOLOR="$styles.get('separator_color')" HEIGHT="2"></TD></TR>
#foreach($field in $entity.fields)
            <TR><TD COLSPAN="2" ALIGN="LEFT">##
#if($field.required)##
<FONT COLOR="$styles.get('mandatory_text')"><B> $field.name.padRight(18) </B></FONT>##
#else##
<FONT COLOR="$styles.get('body_text')"> $field.name.padRight(50) </FONT>##
#end##
</TD><TD><FONT COLOR="$styles.get('body_text')">$field.type</FONT></TD></TR>
#end
#if($entity.specialSections && $entity.specialSections.size() > 0)
            <TR><TD COLSPAN="3" BGCOLOR="$styles.get('separator_color')" HEIGHT="2"></TD></TR>
#foreach($section in $entity.specialSections)
            <TR><TD COLSPAN="2" ALIGN="CENTER">##
#if($section.style == "bold_red")##
<FONT COLOR="$styles.get('special_section_text')"><B> $section.name </B></FONT>##
#else##
<FONT COLOR="$styles.get('body_text')"> $section.name </FONT>##
#end##
</TD><TD><FONT COLOR="$styles.get('body_text')">$section.type</FONT></TD></TR>
#end
#end
#if($entity.description && !$entity.description.isEmpty())
            <TR><TD COLSPAN="3" BGCOLOR="$styles.get('separator_color')" HEIGHT="2"></TD></TR>
            <TR><TD COLSPAN="3" BGCOLOR="$styles.get('body_bg')">$entity.description</TD></TR>
#end
#if($entity.constraints && $entity.constraints.size() > 0)
#foreach($constraint in $entity.constraints)
            <TR><TD COLSPAN="3" BGCOLOR="$styles.get('constraint_bg')" HEIGHT="2"> $constraint </TD></TR>
#end
#end
        </TABLE>
    >];